<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".Edit" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="horizontal" 
            >

            <ImageView
                android:id="@+id/contact_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="left"
                android:src="@drawable/chick" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" 
                >

                <TextView
                    android:id="@+id/single_contact_na"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_weight="1"
                    android:hint="First name"
                    android:text="Eric"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/single_contact_na"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:layout_weight="1"
                    android:hint="Last name"
                    android:text="Hu"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:layout_margin="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/single_contact_mobilePh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textSize="25dp"
            android:text="021596511"
            android:textColor="#FFFFFF"
            android:hint="Mobile ph" 
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/single_contact_homePh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:hint="Home ph" />

        <TextView
            android:id="@+id/single_contact_workPh"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:hint="Work ph" />

        <TextView
            android:id="@+id/single_contact_email"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:text="mark_930511@hotmail.com"
            android:layout_margin="10dp"
            android:hint="Email" />

        <TextView
            android:id="@+id/single_contact_address"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_margin="10dp"
            android:hint="Address" />

        <TextView
            android:id="@+id/single_contact_birthday"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_margin="10dp"
            android:text="1993.5.11"
            android:hint="Birthday" />
    </LinearLayout>

</ScrollView>